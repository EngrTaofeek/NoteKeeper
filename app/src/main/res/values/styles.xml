<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="course_title" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="note_title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/lightGreen</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="addfab" parent="@style/Widget.Design.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_add_circle_black_24dp</item>
        <item name="android:tint" >@android:color/white</item>
    </style>

</resources>
